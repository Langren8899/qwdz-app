/* pages/newest/newest.wxss */
.goods-box {
  position: relative;
  text-align: center;
  color: #454552;
  border-bottom: 30rpx solid #ededed;
}

.goods-box.goods-thumb {
  width: 100%;
  height: 390rpx;
}

.goods-title {
  width: 92%;
  border-bottom: 1px solid #eee;
  line-height: 80rpx;
  font-size: 36rpx;
  margin: 0 auto 30rpx;
}

.goods-left {
  float: left;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.goods-right {
  float: right;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.gooddetail {
  width: 92%;
  margin: 0 auto;
}

.goods-price-left {
  font-size: 32rpx;
  float: left;
}

.goods-price-right {
  font-size: 40rpx;
  float: right;
  color: red;
  font-weight: bold;
}

.ubom {
  clear: both;
  width: 92%;
  height: 20rpx;
  border-bottom: 1px solid #eee;
  margin: 20rpx auto;
}

.goods-operation {
  position: relative;
  width: 92%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  margin: 0 auto 60rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #1aad19;
  color: #fff;
  font-size: 28rpx;
}

.goods-operation text {
  display: inline-block;
  height: 100rpx;
}

.goods-content {
  padding: 40rpx;
}

.goods_details {
  display: inline-block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ededed;
  box-sizing: border-box;
  text-align: center;
  color: #c7c7cb;
}